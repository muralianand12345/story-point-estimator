{
    "tasks": {
        "dev": "deno run --allow-net --allow-env --allow-read --watch --no-check src/index.ts",
        "start": "deno run --allow-net --allow-env --allow-read src/index.ts"
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "strict": true,
        "lib": [
            "deno.window",
            "deno.ns",
            "dom"
        ],
        "types": [
            "./src/types/index.ts"
        ]
    },
    "lint": {
        "include": [
            "src/"
        ]
    },
    "fmt": {
        "include": [
            "src/"
        ],
        "indentWidth": 2,
        "semiColons": true
    }
}