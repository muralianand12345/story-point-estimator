{
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "lint": {
        "files": {
            "include": [
                "server/"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "server/"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 2,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "start": "deno run --allow-net --allow-env --allow-read --allow-write server.ts",
        "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch server.ts",
        "test": "deno test --allow-net --allow-env --allow-read --allow-write"
    },
    "imports": {
        "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
        "sqlite": "https://deno.land/x/sqlite@v3.8/mod.ts",
        "uuid": "npm:uuid@^11.1.0",
        "cors": "https://deno.land/x/cors@v1.2.2/mod.ts",
        "dotenv": "https://deno.land/std@0.220.1/dotenv/mod.ts"
    }
}