{
    "tasks": {
        "dev": "deno run --allow-net --allow-read --allow-env app.ts",
        "start": "deno run --allow-net --allow-read --allow-env app.ts"
    },
    "lint": {
        "include": [
            "**/*.ts"
        ],
        "exclude": [
            "node_modules/"
        ],
        "rules": {
            "tags": [
                "recommended"
            ],
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true
    }
}